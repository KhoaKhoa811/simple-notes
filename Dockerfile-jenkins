# Dockerfile-jenkins (Minimal - chỉ plugins)
FROM jenkins/jenkins:2.516.2-jdk21

USER jenkins

# Cài plugin cần thiết
RUN jenkins-plugin-cli --plugins "blueocean docker-workflow pipeline-github-lib docker-commons docker-build-step git"

# Skip setup wizard
ENV JAVA_OPTS -Djenkins.install.runSetupWizard=false